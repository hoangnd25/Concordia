<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

    <TextView android:text="City Name" android:id="@+id/cityNameTextView"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

    </TextView>
    <TextView android:id="@+id/latLongTextView"
        android:text="-37.50, 145.01, Australia/Melbourne"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#333333">
    </TextView>

    <!-- The id of the list is special. -->
    <!-- This is needed to set the default list of ListActivity -->
    <ListView android:id="@android:id/list"
        android:layout_height="100dp"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:background="#ff424242">
    </ListView>

    <TableLayout android:id="@+id/TableLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1"
        android:gravity="center"
        android:padding="5sp">
        <TableRow android:id="@+id/TableRow01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:padding="2sp"
                android:gravity="center"
                android:textColor="#ffd700"
                android:textSize="20sp"
                android:text="Sun Rise"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
            </TextView>
            <TextView android:padding="2sp"
                android:gravity="center"
                android:textColor="#ff8400"
                android:textSize="20sp"
                android:text="Sun Set"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
            </TextView>
        </TableRow>

        <TableRow android:id="@+id/TableRow02" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                android:padding="2sp"
                android:textSize="40sp"
                android:text="00:00"
                android:textColor="#ffd700"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/sunriseTimeTV"
                android:layout_width="wrap_content">
            </TextView>
            <TextView
                android:padding="2sp"
                android:textSize="40sp"
                android:text="00:00"
                android:textColor="#ff8400"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/sunsetTimeTV"
                android:layout_width="wrap_content">
            </TextView>
        </TableRow>
    </TableLayout>

    <DatePicker android:id="@+id/datePicker"
        android:layout_width="fill_parent"
        android:padding="5sp"
        android:gravity="center"
        android:layout_height="wrap_content">
    </DatePicker>

</LinearLayout>